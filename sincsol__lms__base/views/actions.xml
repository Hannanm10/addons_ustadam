<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action to open Questions in form view -->
    <record id="action_question_form" model="ir.actions.act_window">
        <field name="name">Questions</field>
        <field name="res_model">ustadam.question</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action to open Quizzes in tree view -->
    <record id="action_quiz_tree" model="ir.actions.act_window">
        <field name="name">Quizzes</field>
        <field name="res_model">ustadam.quiz</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
